# DashGate Configuration
# Copy this file to .env and fill in the values

# Server
PORT=1738
CONFIG_PATH=/config/config.yaml
DB_PATH=/config/dashgate.db
ICONS_PATH=/app/static/icons

# Dev mode (set to true for live template reloading)
DEV_MODE=false
TEMPLATES_PATH=/app/templates

# LLDAP Admin Configuration (optional - for user management)
LLDAP_URL=
LLDAP_ADMIN_USERNAME=
LLDAP_ADMIN_PASSWORD=

# Docker auto-discovery
DOCKER_DISCOVERY=false
DOCKER_SOCKET=/var/run/docker.sock

# Traefik auto-discovery
TRAEFIK_DISCOVERY=false
TRAEFIK_URL=
TRAEFIK_USERNAME=
TRAEFIK_PASSWORD=

# Nginx auto-discovery
NGINX_DISCOVERY=false
NGINX_CONFIG_PATH=/etc/nginx/conf.d

# NPM (Nginx Proxy Manager) auto-discovery
NPM_DISCOVERY=false
NPM_URL=
NPM_EMAIL=
NPM_PASSWORD=

# Caddy auto-discovery
CADDY_DISCOVERY=false
CADDY_ADMIN_URL=http://localhost:2019
CADDY_USERNAME=
CADDY_PASSWORD=
